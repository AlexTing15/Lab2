<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab2.MainPage"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <Label 
                Text="Alexander Ting Su Keong BCS23020008"
                HorizontalOptions="Center"
                FontSize="16"
                Margin="0,20,0,10" 
                TextColor="Black" />

            <Image 
                Source="image10.jpg"
                HeightRequest="350"
                Aspect="AspectFill" />

            <Border
                BackgroundColor="LightGoldenrodYellow"
                Padding="20"
                Margin="15, -60, 15, 15"
                StrokeThickness="0">

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="25" />
                </Border.StrokeShape>

                <Border.Shadow>
                    <Shadow Brush="Black" Offset="10,10" Opacity="0.3" />
                </Border.Shadow>

                <Grid
                    RowSpacing="15"
                    ColumnSpacing="10"
                    
                    ColumnDefinitions="Auto, *, Auto"
                    RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto">

                    <VerticalStackLayout 
                        Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                        VerticalOptions="Center">
                        <Label 
                            Text="Robin Hood" 
                            FontSize="24" 
                            FontAttributes="Bold" 
                            TextColor="Black" />
                        <Label 
                            Text="Pug" 
                            FontSize="16" 
                            TextColor="Gray" />
                    </VerticalStackLayout>

                    <Image 
                        Grid.Row="0" Grid.Column="2"
                        Source="symbolfemale.png" 
                        HeightRequest="30" 
                        WidthRequest="30"
                        VerticalOptions="Start" />

                    <Image 
                        Grid.Row="1" Grid.Column="0"
                        Source="location_pin.png" 
                        HeightRequest="24" 
                        WidthRequest="24"
                        VerticalOptions="Center" />
                    <Label 
                        Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                        Text="29, Lorong 5B, Taman Rantau Panjang, 96000 Sibu, Sarawak"
                        VerticalOptions="Center"
                        FontSize="14" 
                        TextColor="Gray" />

                    <Image 
                        Grid.Row="2" Grid.Column="0"
                        Source="age_icon.png" 
                        HeightRequest="24" 
                        WidthRequest="24"
                        VerticalOptions="Center" />
                    <Label 
                        Grid.Row="2" Grid.Column="1"
                        Text="1 year old"
                        VerticalOptions="Center"
                        FontSize="14" 
                        TextColor="Gray" />

                    <BoxView 
                        Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"
                        HeightRequest="1"
                        Color="LightGray"
                        Margin="0, 5" />

                    <Image 
                        Grid.Row="4" Grid.Column="0"
                        Source="owner1.jpeg" 
                        HeightRequest="45" 
                        WidthRequest="45"
                        Aspect="AspectFill"
                        VerticalOptions="Center">
                        <Image.Clip>
                            <EllipseGeometry Center="22.5,22.5" RadiusX="22.5" RadiusY="22.5" />
                        </Image.Clip>
                    </Image>

                    <VerticalStackLayout 
                        Grid.Row="4" Grid.Column="1"
                        VerticalOptions="Center"
                        Spacing="2">
                        <Label 
                            Text="Jeon Jungkook" 
                            FontAttributes="Bold" 
                            TextColor="Black" />
                        <Label 
                            Text="Owner" 
                            FontSize="12" 
                            TextColor="Gray" />
                    </VerticalStackLayout>

                    <Label 
                        Grid.Row="4" Grid.Column="2"
                        Text="1.11.2024"
                        FontSize="12" 
                        TextColor="Gray"
                        VerticalOptions="Center" />

                    <Label 
                        Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3"
                        Text="Hi! Robin the Pug is simply a tiny tornado of fur, wrinkles, and adorable snorts."
                        FontSize="14" 
                        TextColor="DimGray"
                        LineHeight="1.2" />

                    <Button 
                        Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2"
                        Text="Adoption"
                        BackgroundColor="ForestGreen" 
                        TextColor="Black"
                        FontAttributes="Bold"
                        CornerRadius="25"
                        HorizontalOptions="Fill" />

                </Grid>
            </Border>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>